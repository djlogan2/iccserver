{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    },
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "imports/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    ".meteor",
    ".deploy",
    ".coverage",
    ".vscode",
    ".github"
  ]
}
